<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeEsquema"
    android:orientation="vertical"
    tools:context=".recuperarPassword">

    <TextView
        android:id="@+id/tv_recuperarTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RecuperarPass"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="190dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="@string/correo"
        >
    </TextView>

    <EditText
        android:drawableStart="@drawable/ic_letter"
        android:paddingStart="20dp"
        android:id="@+id/edt_correoRecuperar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_edit_input_inicio">

    </EditText>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_enviar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:text="ENVIAR"
        android:textColor="@color/verdeEsquema"
        app:cornerRadius="100dp">

    </com.google.android.material.button.MaterialButton>

</LinearLayout>