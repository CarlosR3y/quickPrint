<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagoActivity">

    <TextView
        android:id="@+id/tvPagos"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/Pagos"
        android:textColor="@color/verdeEsquema"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="409dp"
        android:layout_height="676dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPagos">

        <Spinner
            android:id="@+id/spinnerOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pago"
            android:text="@string/btnPago"
            android:layout_marginTop="350dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            >

        </com.google.android.material.button.MaterialButton>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>